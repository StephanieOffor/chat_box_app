<h2 class="ui center aligned icon header">
  <i class="circular red comments icon"></i>
  CryptMessage
</h2>
    
<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content" id="message-feed">
                <div class="ui feed" id="chatroom-messages">
                    <%= render @messages %>
                </div>
            </div>

            <div class="extra content">
                <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
                    <div class="field">
                        <div class="ui fluid icon input">
                            <%= f.text_field :body, placeholder: "Enter your message" %>
                            <%= f.button '<i class="inverted edit icon"></i>send'.html_safe, class: "ui secondary button" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    
    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="item">
                        <%= link_to 'Home', root_path, class:"item" %>
                        <%= link_to 'Messages', chatroom_path, class:"item" %>
                    </a>
                    <a class="item">
                        Friends
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>
