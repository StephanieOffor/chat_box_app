
<% flash.each do |message_type, msg| %>
	<% if notice %>
		<div class="ui positive message transition">
			<i class="close icon"></i>
			<div class="header">
				<%= msg %>
			</div>
		</div>
	<% elsif alert %>
		<div class="ui negative message transition">
			<i class="close icon"></i>
			<div class="header">
				<%= msg %>
			</div>
		</div>
	<% end %>
<% end %>