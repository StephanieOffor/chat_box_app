<h2 class="ui center aligned icon header">
  <i class="circular red comments icon"></i>
  CryptMessage Login
</h2>


<div class="ui placeholder segment">
  	<div class="ui two column very relaxed stackable grid">
		<div class="column">
			<%= form_with(scope: :session, url: login_path, local: true) do |form| %>
				<div class="ui form">
					<div class="field">
						<label>Username</label>
						<div class="ui left icon input">
							<%= form.text_field :username, placeholder: 'Username' %>
							<i class="user icon" ></i>
						</div>
					</div>
					<div class="field">
						<label>Password</label>
						<div class="ui left icon input">
							<%= form.password_field :password, placeholder: 'Enter your password' %>
							<i class="lock icon" ></i>
						</div>
					</div>
					<div></div>
						<%= form.submit "login", class:"ui black submit button" %>
				</div>
			</div>
		<% end %>
		<div class="middle aligned column">
			<div>
				<%= link_to 'Sign Up', new_user_path, class:"ui big black button signup icon" %>
			</div>
		</div>
	</div>
	<div class="ui vertical divider">
		Or
	</div>
</div>